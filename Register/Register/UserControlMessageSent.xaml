<UserControl x:Class="Register.UserControlMessageSent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Register"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Name="border_cloud"  Background="Gray" CornerRadius="15 15 0 15" Margin="10 12" HorizontalAlignment="Right">
            <TextBlock Name="textBlock_msg" Margin="15" TextWrapping="Wrap" Text="{Binding SentMessage}" Foreground="White"/>
        </Border>
        <TextBlock Name="textBlock_time" Text="星期四下午5:55" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10" Margin="10 -2"/>
    </Grid>
</UserControl>
